#!/bin/sh
#
# git-like libexec switcher

set -e

usage() {
  echo "direnv export|exec|switch [options]" >&2
}

binpath=`readlink -f $0`
bindir=`dirname "$binpath"`

if [ -z "$1" ]; then
  usage
  exit 1
fi

prefix="$bindir/direnv-"

if ! [ -x "$prefix$1" ]; then
  prefix="direnv-"
fi

exec $prefix$@
